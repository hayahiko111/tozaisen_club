<div class="container d-flex">
  <div class="sidebar col-lg-2">
    <div class="search">
      <%= form_with url: search_path, method: :get do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
    <p><%= link_to "人気投稿", popular_path %></p>
    <h4>駅一覧</h4>
    <table class="table">
      <thead class="table-active">
        <tr>
          <th>駅</th>
        </tr>
      </thead>
      <tbody>
        <% @stations.each do |station| %>
        <tr>
          <td>
            <%= link_to station_path(station.id) do %>
              <%= station.name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div>
  <div>
    <p class = "notice"><%= notice %></p>
    <% if @keyword == "" %>
      <h3><%="”" + "”の検索結果" %></h3>
    <% else %>
      <h3><%="”" + @keyword + "”の検索結果" %></h3>
    <% end %>
    <% @posts.each do |post| %>
      <%= image_tag post.image, size: "500x300" %>
      <%= post.station.name %>
      <%= post.genre.name %>
      <%= post.message %>
      <%= post.user.name %>
      <%= "コメント件数：" + post.post_comments.count.to_s %>
      <%= "♥" + post.favorites.count.to_s %>
    <% end %>
  </div>
</div>