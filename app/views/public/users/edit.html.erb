<%= render "public/shared/sidebars", keyword: @keyword, genres: @genres, stations: @stations %>

  <div>
    <p class = "notice"><%= notice %></p>
    <h3 class="title">会員情報編集</h3>
    <%= form_with model: @user, url: users_path, method: :patch do |f| %>
    <table class="user_edit" style="width:400px;height:150px">
      <tr>
        <td><%= f.label :name, "名前" %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit '編集内容を保存', class:"btn btn-outline-success" %></td>
        <td></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>