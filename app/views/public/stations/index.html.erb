<div class="container">
  <h3>駅一覧</h3>
  <table class="table col-lg-4">
    <thead class="table-active">
      <tr>
        <th>駅</th>
      </tr>
    </thead>

    <tbody>
      <% @stations.each do |station| %>
      <tr>
        <td>
          <%= link_to station_path(station.id) do %>
            <%= station.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>