<div class="container">
  <h3><%= @station.name + "駅" %></h3>
  <table>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <% if post.image.attached? %>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.image, size: "500x300" %>
          <% end %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
        </td>
      <td><%= post.genre.name %></td>
      <td><%= post.user.name %></td>
      <td><%= "コメント件数：" + post.post_comments.count.to_s %></td>
      <td><%= post.message %></td>
    </tr>
  <% end %>
  </table>
</div>