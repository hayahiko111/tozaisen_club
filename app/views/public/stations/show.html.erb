<div class="container">
  <h3><%= @station.name + "é§…" %></h3>
  <table>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "700x500" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
        </td>
      <td><%= post.genre.name %></td>
      <td><%= post.message %></td>
    </tr>
    <% end %>
  </table>
</div>