<%= render "admin/shared/sidebars", keyword: @keyword, genres: @genres, stations: @stations, station: @station %>
  <main class="col-lg-6">
    <p class = "notice guest"><%= notice %></p>
    <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success align-self-center" %>
    <div>
      <table class="table table-bordered">
        <tr>
          <td class="col-lg-2 table-active">名前</td>
          <td class="col-lg-5"><%= @user.name %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="table-active">ステータス</td>
        <% if @user.is_deleted == false %>
          <td>有効</td>
        <% else %>
          <td>退会</td>
        <% end %>
        </tr>
      </table>
    </div>
  </main>
</div>