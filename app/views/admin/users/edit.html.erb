<div class="container">
  <h3>会員情報編集</h3>
    <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <table>
      <tr>
        <td><%= f.label :name, "名前" %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit '編集内容を保存', class:"btn btn-success" %></td>
        <td></td>
      </tr>
    </table>
    <% end %>
</div>