<div class="container admin_genre_edit">
 <h3>ジャンル編集</h3>
 <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
  <%= f.label 'ジャンル名', class:"col-lg-2" %>
  <%= f.text_field :name, class:"col-lg-2" %>
  <%= f.submit '変更を保存', class:"btn btn-success"  %>
 <% end %>
</div>