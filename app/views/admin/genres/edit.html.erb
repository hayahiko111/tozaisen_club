<%= render "admin/shared/sidebars", keyword: @keyword, genres: @genres, stations: @stations, station: @station %>
  <main>
    <p class = "notice guest"><%= notice %></p>
    <h3 class="title">ジャンル編集</h3>
    <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
      <%= f.label 'ジャンル名', class:"col-lg-4" %>
      <%= f.text_field :name, class:"col-lg-4" %>
      <%= f.submit 'Update', class:"btn-outline-success"  %>
    <% end %>
  </main>
</div>